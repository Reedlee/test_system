<%= form_for @test, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @test.errors[:name].any? %>">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @test, field_name: :name %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @test.errors[:description].any? %>">
      <%= f.label :description, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @test, field_name: :description %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>