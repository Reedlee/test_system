<%= form_for [@test, @question], html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @question.errors[:text].any? %>">
      <%= f.label :text, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :text, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @question, field_name: :text %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>